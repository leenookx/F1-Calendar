<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="uk.co.purplemonkeys.F1Calendar"
      android:versionCode="1"
      android:versionName="1.0">
    <application android:icon="@drawable/icon" android:label="@string/app_name" android:debuggable="true">
        <!-- Configuration window -->
        <activity android:name="WidgetConfiguration"
                    android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_CONFIGURE" />
            </intent-filter>
        </activity>
        
        <!-- Broadcast Receiver that will process AppWidget updates -->
        <receiver android:name="F1Calendar" android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>
            <meta-data android:name="android.appwidget.provider"
                        android:resource="@xml/f1calendar_widget_provider" />
        </receiver>
        
        <service android:name="CountdownTimerService">
            <intent-filter>
                <action android:name="uk.co.purplemonkeys.F1Calendar.intent.ACTION_NEW_TIMER"/>
                <action android:name="uk.co.purplemonkeys.F1Calendar.intent.ACTION_CANCEL_TIMER"/>
                <action android:name="uk.co.purplemonkeys.F1Calendar.intent.ACTION_ALARM_ALERT"/>
                <action android:name="uk.co.purplemonkeys.F1Calendar.intent.ACTION_ADD_WIDGET"/>
                <action android:name="uk.co.purplemonkeys.F1Calendar.intent.ACTION_REMOVE_WIDGET"/>
            </intent-filter>
        </service>
    </application>

    <uses-sdk android:minSdkVersion="7" android:targetSdkVersion="9"></uses-sdk>
    
    <uses-permission android:name="android.permission.VIBRATE"/>
</manifest> 